<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.Learn_Android_3">


    <!--gravity指定对齐方式-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:rotationX="36"
        android:text="This is TextView"
        android:textColor="#A01CB6"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button1_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button1"
        android:textAllCaps="false"/>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="type here"
        android:maxLines="2"
        />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/p1"
        />

    <Button
        android:id="@+id/button2_visibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button2"/>

    <!--style="?android:attr/progressBarStyleHorizontal"修改成水平进度条-->
    <!--max定义进度条最大值-->
    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        />

    <Button
        android:id="@+id/button3_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button progress increase"/>

    <Button
        android:id="@+id/button4_alertdialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button AlertDialog"/>

</LinearLayout>
